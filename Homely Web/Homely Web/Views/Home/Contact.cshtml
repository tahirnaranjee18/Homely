@model Homely_Web.Models.UserModel
@{
    ViewData["Title"] = "Contact Landowner";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title">Contact Landowner</h2>
                    <p class="text-muted">@ViewBag.IntroText</p>

                    <i class="fas fa-user-circle fa-5x text-primary my-3"></i>

                    <h4 class="mt-3">@Model.FullName</h4>
                    <p class="fs-5">@Model.Email</p>

                    <a href="mailto:@Model.Email" class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-envelope"></i> Send Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>