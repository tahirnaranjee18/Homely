@model Homely_Web.Models.UserModel
@{
    Layout = "~/Views/Shared/_PropertyManagerLayout.cshtml";
    ViewData["Title"] = "Settings";
    var profilePic = Context.Session.GetString("ProfilePic") ?? "/images/default-profile.png";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="card shadow-sm p-4" id="settingsCard">
    <h5 class="mb-3">Profile Settings</h5>
    <form id="settingsForm" method="post" asp-action="SaveSettings" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-md-4 text-center">
                <img id="profilePreview" src="@Url.Content(profilePic)"
                     alt="Profile Picture" class="rounded-circle mb-3"
                     style="width: 120px; height: 120px; object-fit: cover;" />
                <input type="file" name="profilePicture" class="form-control" accept="image/*"
                       onchange="previewImage(event)" />
            </div>

            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label">Display Name</label>
                    <input type="text" name="FullName" value="@Model.FullName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" required />
                </div>

                <button type="submit" id="saveSettingsBtn" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('profilePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}