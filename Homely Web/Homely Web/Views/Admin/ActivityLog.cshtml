@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Activity Log";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">All Recent Actions</h5>
        <input type="text" id="searchBox" class="form-control w-25" placeholder="Search..." />
    </div>
    <div class="card-body">
        <table id="activityTable" class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Action</th>
                    <th>Time</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in ViewBag.AllActivities)
                {
                    <tr>
                        <td>@activity.User</td>
                        <td>@activity.Action</td>
                        <td>@activity.Time</td>
                        <td>
                            <span class="badge bg-@(activity.Status == "Completed" ? "success" : "warning")">
                                @activity.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">← Back to Dashboard</a>

@section Scripts {
    <script>
        // Simple client-side search filter
        document.getElementById('searchBox').addEventListener('keyup', function () {
            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll('#activityTable tbody tr');
            rows.forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(value) ? '' : 'none';
            });
        });
    </script>
}
