@model Homely_Web.Models.AdminLogin
@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<div class="container center-on-page">
    <div class="col-md-5" style="width: 400px;">
        <div class="card shadow-sm p-4">
            <h3 class="text-center fw-bold">Login Portal</h3>
            <p class="text-center text-muted mb-4">Secure Access Required</p>

            <form asp-controller="Admin" asp-action="Login" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Email</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-outline-brown w-100">Login</button>

                <div class="text-center mt-3">
                    <p class="text-muted mb-1">Don't have an account?</p>
                    <a asp-action="Register" class="text-decoration-none">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}