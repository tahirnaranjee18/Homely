@{
    var role = Context.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homely</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body data-theme="light">
    <header>
        <nav class="navbar navbar-main navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideMenu" aria-controls="sideMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/ic_home_logo.png" alt="Homely Logo" style="height: 30px; margin-right: 10px;" />
                    Homely
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav ms-auto">
                        @if (string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-login" asp-area="" asp-controller="Admin" asp-action="Login">Login / Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="sideMenu" aria-labelledby="sideMenuLabel">
        <div class="offcanvas-header" style="background-color: var(--header-bg); color: var(--header-text);">
            <h5 class="offcanvas-title" id="sideMenuLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-building me-2"></i>View Properties
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Admin" asp-action="Login">
                        <i class="fas fa-sign-in-alt me-2"></i>Login / Register
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer-main text-muted">
        <div class="container text-center">
            &copy; 2025 - Homely-Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>