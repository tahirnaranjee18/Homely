@{
    var userName = Context.Session.GetString("UserName") ?? "Admin User";
    var profilePic = Context.Session.GetString("ProfilePic") ?? "/images/default-profile.png";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Homely Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body class="admin-layout" data-theme="light">
    <div class="sidebar d-flex flex-column">
        <h5 class="text-center mb-4 sidebar-header">
            <img src="~/images/ic_dashboard_logo.png" alt="Homely" style="height: 70px;" class="me-2" />
        </h5>

        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                <i class="fas fa-home-alt nav-icon"></i>Dashboard
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "UserManagement" ? "active" : "")" asp-controller="Admin" asp-action="UserManagement">
                <i class="fas fa-users nav-icon"></i>User Management
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")" asp-controller="Admin" asp-action="Reports">
                <i class="fas fa-chart-bar nav-icon"></i>Reports & Analytics
            </a>
        </nav>

        <div class="mt-auto p-3">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")" asp-controller="Admin" asp-action="Settings">
                <i class="fas fa-cog nav-icon"></i>Settings
            </a>
            <a class="nav-link" asp-controller="Admin" asp-action="Logout">
                <i class="fas fa-sign-out-alt nav-icon"></i>Logout
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">

            <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>

            <div class="d-flex align-items-center">
                <img src="@profilePic" alt="Profile" class="profile-pic me-2" />
                <span class="fw-semibold">@userName</span>
                <button id="themeToggle" class="theme-toggle" title="Toggle theme">🌙</button>
            </div>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const body = document.body;
        const toggle = document.getElementById('themeToggle');
        const savedTheme = localStorage.getItem('theme') || 'light';
        body.setAttribute('data-theme', savedTheme);
        toggle.textContent = savedTheme === 'dark' ? '☀️' : '🌙';

        toggle.addEventListener('click', () => {
            const newTheme = body.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            toggle.textContent = newTheme === 'dark' ? '☀️' : '🌙';
            window.dispatchEvent(new StorageEvent('storage', { key: 'theme', newValue: newTheme }));
        });

        window.addEventListener('storage', function (e) {
            if (e.key === 'theme') {
                const newTheme = e.newValue || 'light';
                body.setAttribute('data-theme', newTheme);
                toggle.textContent = newTheme === 'dark' ? '☀️' : '🌙';
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>