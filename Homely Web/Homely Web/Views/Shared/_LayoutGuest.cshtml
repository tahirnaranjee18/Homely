@{
    var role = Context.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homely</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body data-theme="light">

    <header class="header-sticky">
        <nav class="navbar navbar-main-guest navbar-dark border-bottom box-shadow py-1">
            <div class="container-fluid position-relative d-flex justify-content-center align-items-center">


                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/ic_home_logo.png" alt="Homely Logo" style="height: 66px;" />
                </a>


            </div>
        </nav>

        <div class="sub-header">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                View Properties
            </a>
            <a asp-area="" asp-controller="Admin" asp-action="Login">
                Login / Register
            </a>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer-main-guest text-muted">
        <div class="container text-center">
            &copy; 2025 - Homely-Web
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>